<script>
$(document).ready(function(){
    setTimeout(function() {
        $('a[href^="https://buy.stripe.com/"]').each(function(){
            var oldBuyUrl = $(this).attr("href"); // Get current url
            var referralId = Rewardful.referral;
            var newBuyUrl = oldBuyUrl + "?client_reference_id=" + referralId; // Create new url
            $(this).attr("href", newBuyUrl); // Set href value
          });
    }, 2000);
});
</script>
