<script>
$(document).ready(function(){
    setTimeout(function() {
        $('a[href^="https://buy.stripe.com/"]').each(function(){
            const oldBuyUrl = $(this).attr("href"); // Get current url
            const referralId = Rewardful.referral; // Get referral ID
            const coupon = Rewardful.coupon.name
            const newBuyUrl = oldBuyUrl + "?client_reference_id=" + referralId + "&prefilled_promo_code=" + coupon; // Create new url
            $(this).attr("href", newBuyUrl); // Set href value
          });
    }, 2000);
});
</script>
